body
	background-color #f6f6f6
	background-image url('../../../storage/fondo.jpg')
	margin 0px
	
.mtop16
	margin-top 16px
	
.alert
	font-size 14px

.box
	background-color #fff
	border-radius 8px
	border 1px solid #d6d6d6
	position absolute
	width 500px
	@media screen and (max-width: 550px)
		width 350px
	@media screen and (max-width: 350px)
		width 220px
	.header
		background-color #343A40
		border-radius 8px 8px 0px 0px
		padding 2px
		a   
			img
				display block
				margin 0px auto
				width 100%
	@media screen and (max-height: 500px)
			.header
				background-color #343A40
				border-radius 8px 8px 0px 0px
				padding 2px
				a   
					img
						display block
						margin 0px auto
						width 25%
	.btn
		border-radius 3%
			
.box-login
	left calc(50% - 250px)
	top calc(50% - 340px)
	.inside
		padding 16px
	.btn-success
		width 75%
		height 50px
		margin-left 13%
		font-size 1.56rem
	.btn-register
		width 60%
		height 50px
		margin-left 20%
		font-size 1.4rem
	.btn-recover
		width 40%
		height 50px
		margin-left 30%
		font-size 1.0rem
	@media screen and (max-width: 550px)
		left calc(50% - 175px)
		top calc(50% - 340px)
